model Robot {
    # Stoerungen
    errors {
        persistent AusKnopfKaputt
    }

    # Gefahren
    hazards {
        "num ist zu gross" {
            F num = 5
        }
    }

    # Plausibilitaetschecks
    specify {
        "Einmal inactive, immer inactive" {
            G AusKnopfKaputt = No
            => G (Robot = Inactive => (G Robot = Inactive))
        }
    }
}